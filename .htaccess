<IfModule mod_rewrite.c>
    Options -MultiViews
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
#    prod
#    RewriteRule ^(.*)$ index.php [QSA,L]
#    dev
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>

<IfModule !mod_rewrite.c>
    <IfModule mod_alias.c>
#        prod
#        RedirectMatch 302 ^/$ /index.php/
#        dev
        RedirectMatch 302 ^/$ /public/index.php/
    </IfModule>
</IfModule>